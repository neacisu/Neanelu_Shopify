# ============================================
# PNPM CORE SETTINGS
# ============================================
# Compatibilitate React Router 7 și Shopify Vite Plugins
shamefully-hoist=true

# Gestionare automată peer dependencies
auto-install-peers=true

# Forțare respectare versiuni engine din package.json
engine-strict=true

# Dezactivează erori stricte peer (pentru flexibilitate ecosistem)
strict-peer-dependencies=false

# ============================================
# REGISTRY PRIVAT - BULLMQ PRO
# ============================================
@taskforcesh:registry=https://npm.taskforce.sh/
//npm.taskforce.sh/:_authToken=${NPM_TASKFORCESH_TOKEN}
always-auth=true

# ============================================
# PNPM CATALOGS (DECIZIE EXPLICITĂ)
# ============================================
# DECIZIE: NU folosim pnpm catalogs în această fază.
# Motivație: proiectul este nou, catalogs adaugă complexitate
# nejustificată; în F2+ se poate reconsidera pentru pinning
# cross-workspace al versiunilor comune (ex: React, TypeScript).
# Dacă se decide utilizarea catalogs, adaugă în package.json:
# "pnpm": { "catalogs": { "default": { "react": "^19.0.0" } } }
