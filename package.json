{
  "name": "neanelu-shopify",
  "version": "0.1.0",
  "description": "Manager Shopify enterprise application",
  "main": "index.js",
  "type": "module",
  "packageManager": "pnpm@10.27.0",
  "private": true,
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm -r --if-present run dev",
    "build": "pnpm -r --if-present run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm -w exec tsc --noEmit",
    "test": "pnpm -r --if-present run test",
    "ci": "pnpm lint && pnpm typecheck && pnpm test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "db:up": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "db:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "db:logs": "docker compose -f docker-compose.yml -f docker-compose.dev.yml logs -f",
    "db:restart": "pnpm db:down && pnpm db:up",
    "db:clean": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down -v",
    "db:watch": "docker compose -f docker-compose.yml -f docker-compose.dev.yml watch",
    "db:watch:build": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build --watch",
    "db:generate": "pnpm --filter @app/database run db:generate",
    "db:migrate": "pnpm --filter @app/database run db:migrate",
    "db:studio": "pnpm --filter @app/database run db:studio",
    "db:push": "pnpm --filter @app/database run db:push",
    "db:seed": "pnpm --filter @app/database run db:seed",
    "db:seed:ci": "pnpm --filter @app/database run db:seed:ci",
    "db:seed:taxonomy": "pnpm --filter @app/database run db:seed:taxonomy",
    "db:test": "pnpm --filter @app/database run test",
    "db:test:schema": "pnpm --filter @app/database run test:schema",
    "db:test:precommit": "pnpm --filter @app/database run test:precommit",
    "db:test:all": "pnpm --filter @app/database run test:all",
    "oauth:server": "tsx oauth-callback-server.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "msgpackr-extract",
      "protobufjs"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
