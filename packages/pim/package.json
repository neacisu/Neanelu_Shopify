{
  "name": "@app/pim",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./content": {
      "types": "./dist/content/index.d.ts",
      "import": "./dist/content/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run src",
    "test:db": "node ./scripts/test-db.js",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@app/config": "workspace:*",
    "@app/database": "workspace:*",
    "@app/logger": "workspace:*",
    "@app/types": "workspace:*",
    "ioredis": "^5.9.3",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.11.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
