{
  "name": "@app/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node --import tsx src/migrate.ts",
    "db:migrate:kit": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check",
    "db:seed:taxonomy": "node --import tsx src/seed/taxonomy.ts",
    "db:seed": "node --import tsx src/seed/products.ts",
    "db:seed:ci": "node --import tsx src/seed/products-ci.ts",
    "test": "node --test --experimental-test-isolation=none src/**/*.test.ts",
    "test:schema": "node --test --experimental-test-isolation=none src/__tests__/schema/**/*.test.ts",
    "test:constraints": "node --test --experimental-test-isolation=none src/__tests__/constraints/**/*.test.ts",
    "test:indexes": "node --test --experimental-test-isolation=none src/__tests__/indexes/**/*.test.ts",
    "test:rls": "node --test --experimental-test-isolation=none src/__tests__/rls/**/*.test.ts",
    "test:functions": "node --test --experimental-test-isolation=none src/__tests__/functions/**/*.test.ts",
    "test:partitioning": "node --test --experimental-test-isolation=none src/__tests__/partitioning/**/*.test.ts",
    "test:views": "node --test --experimental-test-isolation=none src/__tests__/views/**/*.test.ts",
    "test:precommit": "node --test --experimental-test-isolation=none src/__tests__/precommit/**/*.test.ts",
    "test:integrity": "node --test --experimental-test-isolation=none src/__tests__/integrity/**/*.test.ts",
    "test:all": "node --test --experimental-test-isolation=none 'src/**/*.test.ts'",
    "generate:tests": "node --import tsx scripts/generate-schema-tests.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.17.1",
    "pg-copy-streams": "^7.0.0",
    "stream-json": "^1.9.1"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "@types/pg-copy-streams": "^1.2.5",
    "drizzle-kit": "1.0.0-beta.10-4a43a22"
  }
}
